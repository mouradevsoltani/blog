{% extends ':layouts:base.html.twig' %}
    {% block header %}
        Liste des articles
    {% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <p>
                <a class="btn btn-primary" href="{{ path('article_new') }}">Ajouter</a>
            </p>
        </div>
        <div class="col-md-12">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Slug</th>
                    <th>Date de cr√©ation</th>
                    <th>Date de modification</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for article in articles %}
                    <tr>
                        <td><a href="{{ path('article_show', { 'id': article.id }) }}">{{ article.id }}</a></td>
                        <td>{{ article.titre }}</td>
                        <td>{{ article.slug }}</td>
                        <td>{% if article.dateCreation %}{{ article.dateCreation|date('d/m/Y H:i:s') }}{% endif %}</td>
                        <td>{% if article.dateModification %}{{ article.dateModification|date('d/m/Y H:i:s') }}{% endif %}</td>
                        <td>
                            <div class="dropdown">
                                <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                    Actions
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                    <li>
                                        <a href="{{ path('article_show', { 'id': article.id }) }}">Afficher</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('article_edit', { 'id': article.id }) }}">Modifier</a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
