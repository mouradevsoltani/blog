{% trans_default_domain 'FOSUserBundle' %}
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Changer mon mot de passe</h3>
            </div>
            <div class="panel-body">
                <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST"
                      class="fos_user_profile_edit">

                    <div class="form-group">
                        <label>Mot de passe actuel</label>
                        {{ form_widget(form.current_password, {'attr': {'class': 'form-control'} }) }}
                        <p class="text-danger">
                            {{ form_errors(form.current_password) }}
                        </p>
                    </div>
                    <div class="form-group">
                        <label>Nouveau mot de passe</label>
                        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'} }) }}
                        <p class="text-danger">
                            {{ form_errors(form.plainPassword.first) }}
                        </p>
                    </div>
                    <div class="form-group">
                        <label>VÃ©rification</label>
                        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'} }) }}
                        <p class="text-danger">
                            {{ form_errors(form.plainPassword.second) }}
                        </p>
                    </div>
                    <p>
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-edit"></i> {{ 'change_password.submit'|trans }}
                        </button>
                        <a href="{{ path('fos_user_profile_show') }}" class="btn btn-default">
                            <i class="fa fa-user"></i> Retour au profil
                        </a>
                    </p>
                    {{ form_rest(form) }}
                </form>
            </div>
        </div>
    </div>
</div>

